#4. Crie uma classe abstrata Forma com método area() e implemente Quadrado.

from abc import ABC, abstractmethod

class Forma(ABC):
    @abstractmethod
    def area(self):
        pass

class Quadrado(Forma):
    def __init__(self, lado):
        self.lado = lado

    def area(self):
        return self.lado * self.lado

# Exemplo de uso:
if __name__ == "__main__":
    q = Quadrado(4)
    print(f"Área do quadrado: {q.area()}")